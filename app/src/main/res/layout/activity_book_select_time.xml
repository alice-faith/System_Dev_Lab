<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="Activities.BookSelectTimeActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BOOK APPOINTMENT"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/abril_fatface_regular"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/dateBKTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="04_08_2022"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/abril_fatface_regular"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Select time"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/abril_fatface_regular"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/timeTv"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/abril_fatface_regular"
            android:text="Time"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textSize="15sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/errorTimeMsgTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" ERROR: Please pick time slots"
            android:textColor="#F60606"
            android:visibility="invisible"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/abril_fatface_regular"
            android:layout_marginTop="15dp"/>

        <Button
            android:id="@+id/pickTimeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:text="PICK TIME"
            />

        <TextView
            android:id="@+id/completeTimeTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COMPLETE"
            android:background="@drawable/rectangle00"
            android:layout_margin="10dp"
            android:padding="20dp"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/abril_fatface_regular"
            android:layout_marginTop="15dp"/>



    </LinearLayout>



</LinearLayout>