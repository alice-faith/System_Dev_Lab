<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="Activities.SendEmailActivity">

    <LinearLayout
        android:id="@+id/layoutSendEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SEND EMAIL NOTIFICATION"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/abril_fatface_regular"
            android:layout_marginTop="15dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangle00">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText

                    android:id="@+id/sendToEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/abril_fatface_regular"
                    android:hint="Send To"
                    android:textSize="15sp"
                    android:inputType="textWebEmailAddress"
                    android:background="@drawable/rectangle00"
                    android:drawableStart="@drawable/ic_baseline_edit_24"

                    />
            </LinearLayout>


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle00"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText

                    android:id="@+id/subjectEt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/abril_fatface_regular"
                    android:hint="Email Subject"
                    android:textSize="15sp"
                    android:inputType="textWebEmailAddress"
                    android:background="@drawable/rectangle00"
                    android:drawableLeft="@drawable/ic_baseline_edit_24"
                    />

                <ImageButton
                    android:id="@+id/subjectDD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_keyboard_arrow_down_24"/>



            </LinearLayout>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle00"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText

                    android:id="@+id/bodyEt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/abril_fatface_regular"
                    android:hint="Email Subject"
                    android:textSize="15sp"
                    android:inputType="textWebEmailAddress"
                    android:background="@drawable/rectangle00"
                    android:drawableLeft="@drawable/ic_baseline_edit_24"
                    />

                <ImageButton
                    android:id="@+id/bodyDD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_keyboard_arrow_down_24"/>



            </LinearLayout>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/sendBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEND"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutEmailSuccess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Notification sent successfully "
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textColor="#16C81D"
            android:fontFamily="@font/abril_fatface_regular"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/homeSETv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PROCEED TO HOME"
            android:background="@drawable/rectangle00"
            android:layout_margin="10dp"
            android:drawableRight="@drawable/ic_baseline_arrow_forward_24"
            android:padding="20dp"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/abril_fatface_regular"
            android:layout_marginTop="30dp"/>

    </LinearLayout>


</LinearLayout>