<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="Activities.NotifyPatientsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="FULL APPOINTMENT DETAILS"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/abril_fatface_regular"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/rectangle00">

        <TextView
            android:id="@+id/datePickerFDTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="click to select date"
            android:background="@drawable/rectangle00"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:fontFamily="@font/abril_fatface_regular"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/searchDateFDTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Date"
            android:background="@drawable/rectangle00"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:drawableRight="@drawable/ic_baseline_search_24"
            android:fontFamily="@font/abril_fatface_regular"
            android:textSize="20sp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fullDetailsRv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        tools:listitem="@layout/row_full_details"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>


</LinearLayout>