<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="Activities.DiagnosisActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RECORD APPOINTMENT DETAILS"
            android:layout_marginTop="10dp"
            android:textSize="30sp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:fontFamily="@font/abril_fatface_regular"
            android:gravity="center_horizontal" />

        <LinearLayout
            android:id="@+id/layoutSaveData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/abril_fatface_regular"
                    android:text="Name : "
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/nameTvAF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/abril_fatface_regular"
                    android:text="David"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/abril_fatface_regular"
                    android:text="Phone : "
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/phoneTvAF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/abril_fatface_regular"
                    android:text="0712345678"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/abril_fatface_regular"
                    android:text="Email : "
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/emailTvAF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/abril_fatface_regular"
                    android:text="david@gmail.com"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="3dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/abril_fatface_regular"
                    android:text="Diagnosis"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/diagnosisEt"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:hint="Enter Diagnosis"/>



            </LinearLayout>

            <Button
                android:id="@+id/saveBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="SAVE" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutSaveSuccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <TextView
                android:id="@+id/homeAFTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proceed to Home Page"
                android:textSize="25sp"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:layout_gravity="center"
                android:fontFamily="@font/abril_fatface_regular"
                android:drawablePadding="10dp"
                android:background="@drawable/rectangle00"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_24"
                />

        </LinearLayout>


    </LinearLayout>


</ScrollView>